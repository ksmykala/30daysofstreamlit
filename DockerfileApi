FROM tiangolo/uvicorn-gunicorn-fastapi:python3.9

WORKDIR /app

COPY ./env/requirements.txt /app/requirements.txt

RUN pip install --no-cache-dir --upgrade -r /app/requirements.txt

COPY ./src /app/src
COPY ./img /app/img
COPY ./data /app/data
COPY ./api /app/api

CMD ["uvicorn", "api.api:api", "--host", "0.0.0.0", "--port", "80"]
